<h1>Retailer Detail Page</h1>


<div>
    <h2><%= @retailer.name %> established in <%= @retailer.year_established %></h2>
</div>

<ul>
    <% @retailer.snacks.each do |snack| %>
        <li><%= link_to snack.name, snack_path(snack) %></li>
    <% end %>
</ul>

<%= link_to "Retailer Index Page", retailers_path %>