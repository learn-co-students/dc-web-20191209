<h1>Login or <%= link_to "Create a User", new_user_path %></h1>
<% if flash.notice %>
    <div class="error"><%= flash.notice %></div>
<% end %>

<%= form_tag "/login" do %>

    <%= label :username, "Username" %>
    <%= text_field_tag :username %>
    <%= label :password, "Password" %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login" %>

<% end %>