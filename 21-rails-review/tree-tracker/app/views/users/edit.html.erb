<% if @user.errors.any? %>
    <% @user.errors.each do |error| %>
        <%= error %>
    <% end %>
<% end %>
<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <label>Favorite trees:</label>
    <%= f.collection_check_boxes :tree_ids, Tree.all, :id, :common_name %>

    <%= f.submit "Update profile" %>
<% end %>